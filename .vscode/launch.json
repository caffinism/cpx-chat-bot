{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Run main.py with local imports",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/backend/src/app.py",
            "cwd": "${workspaceFolder}/src/backend/src",
            "justMyCode": false
        },
        {
            "name": "Debug Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/src/backend/src/test/test_chat.py",
                "-s",
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/backend/src",
            "justMyCode": false
        },
        {
            "name": "Python: Run groupchat_client.py as a module",
            "type": "python",
            "request": "launch",
            "module": "sk_orchestration_scripts.groupchat_client",
            "cwd": "${workspaceFolder}/src/backend/src",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Run handoff_client.py as a module",
            "type": "python",
            "request": "launch",
            "module": "sk_orchestration_scripts.handoff_client",
            "cwd": "${workspaceFolder}/src/backend/src",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}